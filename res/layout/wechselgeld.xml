<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >
    
    <TextView
        android:id="@+id/wechselgeld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preis"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/wechselgeldPreis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/wechselgeldTvGegeben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Gegebenes Geld"  
              android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/wechselgeldGegeben"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp" 
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/wechselgeldGo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Rueckgeld" />
    </LinearLayout>
<TextView
        android:id="@+id/wechselgeldTvOutput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>
